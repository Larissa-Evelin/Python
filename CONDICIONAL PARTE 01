a =  int(input("entre com o primeiro valor:"))
b =  int(input("entre com o segundo valor:"))
c = int(input("Terceiro valor"))

if a > b and a > c:
    print("o maior numero é {}" .format(a))
elif b > a and b > c:
    print("O maior numero é {}" .format(b))
else:
    print("O maior numero e {}" .format(c))
    
